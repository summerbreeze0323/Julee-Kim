<!DOCTYPE html>
<html>
<head>
    <% include ../partial/head %>
</head>
<body>
    <div class="header">
        <% include ../partial/nav %>
    </div>
    <div class="container">
        <div class"container_inner>
            <h3>Edit Post</h3>
            <form class="create_form" action="/board/update/<%= data._id %>" method="post">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="title" value="<%= data.title %>" class="form-control">
                </div>
                <div class="form-group">
                    <label>Body</label>
                    <textarea name="body" class="form-control textArea"><%= data.body %></textarea>
                </div>
                <div class="button_box">
                    <button type="submit" class="btn">Save</button>
                    <a href="/board" class="btn btn_back">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
